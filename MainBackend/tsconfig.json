{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts",
    "__test__/**/*.ts",
  ],
  "exclude": [
    "src/**/*.js",
    "node_modules"
  ]
}
